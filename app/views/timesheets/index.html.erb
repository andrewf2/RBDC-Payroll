<h1>Listing timesheets</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Timein</th>
      <th>Timeout</th>
      <th>Hours</th>
      <th>Project</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @timesheets.each do |timesheet| %>
      <tr>
        <td><%= timesheet.date %></td>
        <td><%= timesheet.timein.strftime("%I:%M%p") %></td>
        <td><%= timesheet.timeout.strftime("%I:%M%p") %></td>
        <td><%= timesheet.hours %></td>
        <td><%= timesheet.project %></td>
        <td><%= timesheet.description %></td>
        <td><%= link_to 'Show', user_timesheet_path(@url_user, timesheet) %></td>
        <td><%= link_to 'Edit', edit_user_timesheet_path(@url_user, timesheet) %></td>
        <td><%= link_to 'Destroy', user_timesheet_path(@url_user, timesheet), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Timesheet', new_user_timesheet_path(@url_user) %>
